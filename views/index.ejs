<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        div{
            margin:0 auto;
        }
   
        a{
            text-decoration: none;
        }

        h3:hover{
            
            color:red;
          cursor: pointer;
        }
    </style>
    <%- include("imports.ejs")%>
</head>
<body>
    <div>
        <a href="/animal/new"><button>Create animal</button></a>
        <ul><span style="font-size: 30px; background-color: black; color:white">List of Animals</span>
         <% allAnimals.forEach((animal, index)=>{%>
          <a href="/animal/<%= animal._id%>"><h3>Name: <%= animal.species%></h3></a>
            <% })%>
        </ul>
    </div>

    
</body>
</html>
